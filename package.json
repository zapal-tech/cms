{
  "name": "@zapal/website-cms",
  "description": "Zapal's website CMS",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "npm run copyfiles && npm run build:payload && npm run build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@google-cloud/storage": "6.4.1",
    "@payloadcms/bundler-webpack": "^1.0.3",
    "@payloadcms/db-mongodb": "^1.0.3",
    "@payloadcms/plugin-cloud-storage": "^1.1.1",
    "@payloadcms/plugin-seo": "^1.0.15",
    "@payloadcms/richtext-lexical": "^0.1.11",
    "axios": "^1.5.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "payload": "^2.0.6",
    "payload-plugin-phone-field": "^1.0.6",
    "react": "^18.2.0",
    "slugify": "^1.6.6",
    "ua-en-translit": "^3.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/express": "^4.17.9",
    "@types/react": "^18.2.28",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack-hot-middleware": "^2.25.4"
  },
  "_moduleAliases": {
    "assets": "src/assets",
    "components": "src/components",
    "collections": "src/collections",
    "fields": "src/fields",
    "globals": "src/globals",
    "hooks": "src/hooks",
    "types": "src/types",
    "utils": "src/utils",
    "public": "src/public",
    "locales": "src/locales"
  }
}
